# Contest Manager Environment Configuration
# Copy this file to .env and update with your actual values

# AWS API Gateway Configuration
REACT_APP_API_BASE_URL=https://your-api-gateway-id.execute-api.us-east-1.amazonaws.com/prod
REACT_APP_API_KEY=your-api-gateway-key-here

# Development Mode (set to 'false' for production)
REACT_APP_DEVELOPMENT_MODE=true

# Monday.com Integration (optional)
REACT_APP_MONDAY_API_TOKEN=your-monday-api-token
REACT_APP_MONDAY_BOARD_ID=your-monday-board-id
REACT_APP_ENABLE_MONDAY_INTEGRATION=false

# Feature Flags
REACT_APP_ENABLE_S3_BROWSER=true
REACT_APP_ENABLE_CONTEST_RULES=true
REACT_APP_ENABLE_WINNER_SELECTION=true
REACT_APP_ENABLE_DATA_EXPORT=true

# Polling and Refresh Intervals (in milliseconds)
REACT_APP_DATA_REFRESH_INTERVAL=30000
REACT_APP_STATUS_POLL_INTERVAL=5000

# UI Configuration
REACT_APP_ENABLE_DEBUG_LOGGING=false
REACT_APP_SHOW_DEVELOPMENT_TOOLS=false

# AWS Region (for display purposes)
REACT_APP_AWS_REGION=us-east-1

# Deployment Configuration
REACT_APP_DEPLOYMENT_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Security Configuration
REACT_APP_ENABLE_API_KEY_ROTATION=false
REACT_APP_SESSION_TIMEOUT=3600000

# Customer Service Team Configuration
REACT_APP_TEAM_NAME=Optivate Customer Service
REACT_APP_SUPPORT_EMAIL=support@optivateagency.com
REACT_APP_ESCALATION_CONTACT=admin@optivateagency.com

# Branding Configuration
REACT_APP_COMPANY_NAME=Optivate Agency
REACT_APP_COMPANY_WEBSITE=https://optivateagency.com
REACT_APP_LOGO_URL=/logo.png

# Data Validation Configuration
REACT_APP_MAX_ENTRIES_PER_PERSON=10
REACT_APP_MAX_TOTAL_WINNERS=1000
REACT_APP_MAX_WINNERS_PER_RULE=100

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE_MB=10
REACT_APP_ALLOWED_FILE_TYPES=.json,.csv,.txt

# Error Handling Configuration
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ERROR_RETRY_ATTEMPTS=3
REACT_APP_ERROR_RETRY_DELAY=1000
